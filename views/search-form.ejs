<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
  <h1>Search</h1>
  <form action="/api/search-listings" method="POST" id="search-listing-form" class="search-listing-form">
    <div class="search-listing-form__field-wrapper">
      <label for="search-listing-form__title">Title</label>
      <input type="text" name="Title" placeholder="Title" id="search-listing-form__title">
    </div>
    <div class="search-listing-form__field-wrapper">
      <label for="search-listing-form__category">Category</label>
      <select id = "categories-dropdown" placeholder="categories" name="categories">
        <option value="" disabled selected>Categories</option>
        <option value = "Clothing">Clothing</option>
        <option value = "Jewellery">Jewellery</option>
        <option value = "Shoes">Shoes</option>
        <option value = "Other">Other</option>
      </select>
    </div>

    <div class="search-listing-form__field-wrapper">
      <label for="search-listing-form__condition">Condition</label>
      <select id = "conditions-dropdown" placeholder="conditions" name="conditions">
        <option value="" disabled selected>Condition</option>
        <option value = "New">New</option>
        <option value = "Used">Used</option>
      </select>
    </div>

    <div class="search-listing-form__field-wrapper">
      <label for="search-listing-form__minimum-price">Min Price</label>
      <input type="number" name="minimum_price" placeholder="Minimum Cost" id="search-listing-form__minimum-price">
      <label for="search-listing-form__maximum-price">Max Price</label>
      <input type="number" name="maximum_price" placeholder="Maximum Cost" id="search-listing-form__maximum-price">
    </div>

    <div class="search-listing-form__field-wrapper">
        <button>Search</button>
        <a id="search-listing-form__cancel" href="#">Cancel</a>
    </div>
  </form>
</body>
</html>
