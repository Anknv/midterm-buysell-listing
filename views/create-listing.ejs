<!DOCTYPE html>
<html lang="en">

<head>
  <title>Create Listing</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <!-- <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" /> -->

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <h1>Create Listing</h1>
  <form method="post" action="/api/listings/create-listing" id="new-listing-form" class="new-listing-form">

    <div class="new-listing-form__field-wrapper">
      <label for="new-listing-form__cost">Price</label>
      <input placeholder="Price" type="number" name="price" id="new-listing-form__price">
    </div>

    <div class="new-listing-form__field-wrapper">
      <label for="new-listing-form__title">Title</label>
      <input type="text" name="title" placeholder="Title" id="new-listing-form__title">
    </div>

    <div class="new-listing-form__field-wrapper">
      <label for="new-listing-form__description">Description</label>
      <textarea placeholder="Description" name="description" id="property-form__description" cols="30" rows="3" maxlength="90"></textarea>
    </div>

    <div class="new-listing-form__field-wrapper">
      <label for="new-listing-form__image">Image</label>
      <input placeholder="Image URL" type="text" name="image_url" id="new-listing-form__image">
    </div>

    <div class="new-listing-form__field-wrapper">
      <label for="new-listing-form__condition">Condition</label>
      <select id="new-listing-form__condition" name="condition" data-condition-selected="New">
          <option value="New">New</option>
          <option value="Used">Used</option>
      </select>
    </div>

    <div class="new-listing-form__field-wrapper">
      <label for="new-listing-form__category">Category</label>
      <select id="new-listing-form__category" name="category" data-category-selected="Clothing">
          <option value="Clothing">Clothing</option>
          <option value="Shoes">Shoes</option>
          <option value="Accessories">Accessories</option>
          <option value="Other">Other</option>
      </select>
    </div>

    <div class="new-listing-form__field-wrapper">
        <button>Create</button>
        <a id="listing-form__cancel" href="#">Cancel</a>
    </div>
  </form>
</body>
</html>
